<%= form_with(model: [:admin, user], class: "mb-3") do |f| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(user.errors.count, "erro") %> impediram este usuário de ser salvo:</h4>
      <ul>
        <% user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "Senha", class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
    <% if user.persisted? %>
      <div class="form-text">Deixe em branco se não quiser alterar a senha</div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirmação de Senha", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="mb-3">
    <div class="form-check">
      <%= f.check_box :admin, class: "form-check-input" %>
      <%= f.label :admin, "Administrador?", class: "form-check-label" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to "Voltar", admin_users_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
