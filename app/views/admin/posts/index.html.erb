<h2>Gerenciar Posts</h2>
<a href="/admin/posts/new" class="btn btn-primary">Novo Post</a>

<table class="table mt-3">
  <thead>
    <tr>
      <th>Título</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>
          <a href="<%= edit_admin_post_path(post) %>" class="btn btn-warning">Editar</a>
          <%= button_to "Deletar", admin_post_path(post), method: :delete, class: "btn btn-danger", data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
