<div class="d-flex flex-column gap-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Entrar", new_session_path(resource_name), class: "text-decoration-none" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-decoration-none" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name), class: "text-decoration-none" %>
  <% end %>
</div>
